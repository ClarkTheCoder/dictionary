<% include partials/_header.ejs %>

<div id = "main-section" class = "metric-section">

    <br>

    <div class = "metric definition-count-metric">
        Definitions: <span class = "bold definition-count"><%= approvedDefinitionCount %></span> for <span class = "bold"><%= termCount %></span> terms
    </div>
    <br>
    <div class = "metric definition-count-metric">
        Users: <span class = "bold"><%= userCount - 3 %></span>
    </div>
    <br>

    <% for(var i = 0; i < userCount; i++){ %>
        
        <% var user = users[i] %>

            <div class = "one-user">
            <div class = "metric-table metric-username">
                <%= (i+1) %>. <a class = "bold" href = "/profile/<%= user.username %>"><%= user.username %></a>
            </div>

            <div class = "metric-table metric-email">
                <%= user.email %>
            </div>

            <div class = "metric-table metric-date">
                <% if(user.createdOn){ %>
                    <%= new Date(user.createdOn).toString().substring(0,21); %>
                <% } %>
            </div>
        </div>

    <% } %>

    <br><br><br>


    <div class = "metric">Visits: <span class = "bold"><%= visitCount %></span>
    <br>
    Unapproved definitions: <span class = "bold"><%= unapprovedDefinitionCount %></span>
    <br><br>
    </div>
    <div class = "metric">Approved Definitions:</div>

    <% approvedDefinitions.forEach(function(def){ %>
        <div class = "metric-definition"><a class = "bold" href ="<%= def.term %>"><%= def.term %></a> </div>
        <div class = "metric-search-author"><a href ="profile/<%= def.author %>"><%= def.author %></a></div>
        <div class = "metric-definition-author"><%= def.created.toString().substring(0,21) %></div>
        <br>
    <% }) %>

    <br>

    <div class = "metric">Unapproved Definitions:</div>

    <% unapprovedDefinitions.forEach(function(def){ %>
        <div class = "metric-definition bold"><a class = "bold" href ="<%= def.term %>"><%= def.term %></a> </div>
        <div class = "metric-definition-author"><a href ="profile/<%= def.author %>"><%= def.author %></a></div>
        <br>
    <% }) %>

    <br>

    <div class = "metric">Searches:</div>

    <div class = "metric">Traffic history:</div>
    <% for (key in searchCount){ %>
        <div class = "metric-definition bold"><%= key.toString().substring(0, 15) %></div>
        <div class = "metric-search-author"></div>
        <div class = "metric-definition-author"><%= searchCount[key] %></div>
        <br>
    <% } %>


</div>

<% include partials/_footer.ejs %>

